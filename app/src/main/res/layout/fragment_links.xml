<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:background="@color/primary_bg"
    android:orientation="vertical"
    android:layout_marginBottom="77dp"
    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.LinksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:layout_marginTop="40dp"
            android:paddingEnd="16dp"
            android:weightSum="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:fontFamily="@font/figtree_semibold"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/settings"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="10"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/item_bg_curve"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="30dp"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/greeting"
                android:text="Good morning"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/figtree_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="8dp"
                android:text="Subhajit RajakðŸ‘‹"
                android:textColor="@color/black"
                android:fontFamily="@font/figtree_semibold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_curve_bg"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="15dp"
                    android:paddingTop="15dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_weight="10"
                        android:text="Overview"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/figtree_regular"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:orientation="horizontal"
                        android:background="@drawable/stroke_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:id="@+id/time"
                            android:text="-- "
                            android:textColor="@color/black"
                            android:fontFamily="@font/figtree_regular"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/time"/>

                    </LinearLayout>

                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-16dp"
                android:paddingEnd="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/clicks"
                        layout="@layout/item_spotlight"/>

                    <include
                        android:id="@+id/toplocation"
                        layout="@layout/item_spotlight"/>

                    <include
                        android:id="@+id/sources"
                        layout="@layout/item_spotlight"/>

                    <include
                        android:id="@+id/bestTime"
                        layout="@layout/item_spotlight"/>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/trending"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="View Analytics"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/figtree_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Top Links"
                        android:id="@+id/toplinks"
                        android:textColor="@color/white"
                        android:background="@drawable/selected_tab"
                        android:fontFamily="@font/figtree_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Recent Links"
                        android:id="@+id/recentLinks"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/figtree_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:background="@drawable/button_bg"
                    android:layout_height="40dp"
                    android:src="@drawable/search_ic"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:id="@+id/recyclerView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/viewLinks"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/link"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/viewLinksTxt"
                    android:text="View all Links"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/figtree_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/whatsapp_button"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/whatsapp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Talk with us"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/figtree_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/blue_button"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/query"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Frequently Asked Questions"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/figtree_semibold"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>